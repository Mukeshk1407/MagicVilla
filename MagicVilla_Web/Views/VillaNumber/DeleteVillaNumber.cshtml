@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM


<br />

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary"> DElete Villa Number</h1>
        <hr />
        <input hidden asp-for="VillaNumber.VillaNO" />
        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNO" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="VillaNumber.VillaNO" />
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" class="form-select" disabled asp-items="@Model.VillaList">
                    <option disabled selected>--Selecte Villa</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" readonly asp-for="VillaNumber.SpecialDetails" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}